
    <%-include('header')-%>
    
    <div>
    <div class="text-center center-div" id="login">

        <div class="container c1 w-50 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login </h2>
                <span>Login for existing users</span>
                <% if (locals.logout) { %>
                <div class="alert alert-success text-center mt-3">
                    <%= logout %>
                </div>
                <% } %>
            </div>
            <form action="/route/login" method="POST" class="pt-3">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="email">
                    <small class="form-text text-muted text-left">Enter registered email address</small>
                </div>
                <div class="form-group pt-3">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill mt-3">Submit</button>
            </form>
        </div>
    </div>

    
    

    <%-include('footer')-%>
